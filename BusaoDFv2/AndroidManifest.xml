<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flaviojmendes.busaodf"
    android:versionCode="8"
    android:versionName="2.1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_busao"
        android:label="@string/app_name"
        android:theme="@style/myTheme"
        android:screenOrientation="portrait" >
        <activity
            android:name=".MainBusao"
            android:label="@string/titulo_app" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".ResultadoLinhas" android:label="@string/title_activity_resultado_linhas"  android:screenOrientation="portrait" />
        <activity android:name=".ResultadoHorarios" android:label="@string/title_activity_resultado_horarios"  android:screenOrientation="portrait" />
        <activity android:name=".Comentario" android:label="@string/title_activity_comentario"  android:screenOrientation="portrait" />
         <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>